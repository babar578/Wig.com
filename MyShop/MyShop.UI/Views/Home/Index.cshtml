@model MyShop.Core.ViewModel.ProductListViewModel
@{
    ViewBag.Title = "Home Page";
}



<div class=" col-md-2 btn-group-vertical"  >
    <h4>Fillter By Catagory</h4>
    <div class="list-group">
        @Html.ActionLink("All","Index", null , new { @class=Request["Catagory"]==null? "list-group-item active": "list-group-item  "     })
        @foreach (var cat in Model.ProductCategories)
        {

            @Html.ActionLink(cat.Category ,"index",new { Catagory = cat.Category},new { @class = Request["Catagory"] == cat.Category? "list-group-item active": "list-group-item  "  } )

        }

    </div>

</div>
<div class=" col-md-10">



    @foreach (var item in Model.Product)
    {


        <div class=" col-md-4" style="height:450px ;padding:10px;margin:10px ;border:solid thin whitesmoke">

            <div class="col-md-12">
                <img class="img" style="height:250px" src="~/Content/ProductImage/@item.Image" />

            </div>

            <div class=" col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })         </strong>
            </div>

            <div class="col-md-12">
                <p> @item.Description </p>



            </div>

            <div class="col-md-12">
                <h4> $@item.Price </h4>



            </div>

            <div class=" col-md-12">
                <a href="a" class="btn btn-default"> Add to Basket        </a>


            </div>



        </div>







    }</div>
    <div class=" col-md-12  clearfix " />
